<h1>Private Leagues</h1>

<table>
  <tr>
    <th>Name</th>
    <th>League</th>
    <th>Team</th>
    <th>Div</th>
    <th>Score</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>


<% @private_leagues.each do |private_league| %>
  <tr>
    <td><%= private_league.name %></td>
    <td><%= private_league.league_id %></td>
    <td><%= number_with_precision(private_league.rank_average, :precision => 2)  %></td>
    <td><%= number_with_precision(private_league.division_average, :precision => 2)  %></td>
    <td><%= number_with_precision((private_league.rank_average * private_league.division_average), :precision => 2)  %></td>
    <td><%= link_to 'Show', private_league %></td>
    <td><%= link_to 'Edit', edit_private_league_path(private_league) %></td>
    <td><%= link_to 'Destroy', private_league, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

